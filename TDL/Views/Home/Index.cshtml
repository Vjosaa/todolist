@model TDL.Models.todolist
@{
    Layout = null;
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container" style="margin-top:3%">
    <a href="#" class="btn btn-info" onclick="AddNewTDL(0)">Add New Note</a> <br /><br />

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Department</th>
                <th>Edit</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody id="SettdlList">
            <tr id="LoadingStatus" style="color:red"></tr>
        </tbody>
    </table>

    @*Create A Popup Modal With Registration Form For Add Or Edit NOTES *@
    <div class="modal fade" id="MyModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4 id="ModalTitle"></h4>
                </div>
                <div class="modal-body">
                    <form id="form">
                        <fieldset id="SubmitForm">
                            @Html.HiddenFor(m => m.tid, new { @id = "ID" })
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.title, new { @id = "Title", @class = "form-control", @placeholder = "Title*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.description, new { @id = "Description", @class = "form-control", @placeholder = "Description*" })
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(m => m.id, ViewBag.ListOfDepartment as SelectList, "--Select Dept--", new { @id = "DropDwn", @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <a href="#" class="btn btn-block btn-danger" id="SaveNotes">Save</a>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div> 
</div>


<script>
    $("#LoadingStatus").html("Loading....");
    $.get("/Home/GettdlList", null, DataBind);

    function DataBind(tdlList) {
        //This Code For Receive All Data From Controller And Show It In Client Side
        var SetData = $("#SettdlList");
        for (var i = 0; i < tdlList.length; i++) {
            var Data = "<tr class='row_" + tdlList[i].tid + "'>" +
                "<td>" + tdlList[i].tid + "</td>" +
                "<td>" + tdlList[i].title + "</td>" +
                "<td>" + tdlList[i].description + "</td>" +
                "<td>" + tdlList[i].dname + "</td>" +
                "<td>" + "<a href='#' class='btn btn-warning' onclick='EditNotes(" + tdlList[i].tid + ")' ><span class='glyphicon glyphicon-edit'></span></a>" + "</td>" +
                "<td>" + "<a href='#' class='btn btn-danger' onclick='DeleteNotes(" + tdlList[i].tid + ")'><span class='glyphicon glyphicon-trash'></span></a>" + "</td>" +
                "</tr>";
            SetData.append(Data);
            $("#LoadingStatus").html(" ");

        }
    }

    //Show The Popup Modal For Add New Student

    function AddNewTDL(id) {
        $("#form")[0].reset();
        $("#StuId").val(0);
        $("#DropDwn option:selected").text("--Select Dept--");
        $("#ModalTitle").html("Add New Notes");
        $("#MyModal").modal();

    }

    //Show The Popup Modal For Edit Student Record

    function EditNotes(tid) {
        var url = "/Home/GettdlListById?tid=" + tid;
        $("#ModalTitle").html("Update Notes");
        $("#MyModal").modal();
        $.ajax({
            type: "GET",
            url: url,
            success: function (data) {
                var obj = JSON.parse(data);
                $("#ID").val(obj.tid);
                $("#Title").val(obj.title);
                $("#Description").val(obj.description);
                $("#DropDwn option:selected").text(obj.Departement.dname);
                $("#DropDwn option:selected").val(obj.Departement.id);
            }
        })
    }

    $("#SaveNotes").click(function () {
        var data = $("#SubmitForm").serialize();
        $.ajax({
            type: "Post",
            url: "/Home/SaveDataInDatabase",
            data: data,
            success: function (result) {
                alert("Success!..");
                window.location.href = "/Home/index";
                $("#MyModal").modal("hide");

            }
        })
    })

    $("#SaveStudentRecord").click(function () {
        var data = $("#SubmitForm").serialize();
        $.ajax({
            type: "Post",
            url: "/Home/SaveDataInDatabase",
            data: data,
            success: function (result) {
                alert("Success!..");
                window.location.href = "/Home/index";
                $("#MyModal").modal("hide");

            }
        })
    })
</script>